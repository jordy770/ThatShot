<div>
    @foreach (var item in Model.pictures)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/@item.File" alt="Just some picutre" style="border">
                
                <div class="caption">
                    @if (User.Identity.IsAuthenticated) {
                        if (User.IsInRole("Admin"))
                        {
                        <div class="btn-group pull-right" role="group" aria-label="...">
                            <button type="button" class="btn btn-default">Show</button>
                            <button type="button" class="btn btn-default">Hide</button>
                        </div>
                        }
                    }
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    <div>User: @Html.DisplayFor(modelItem => item.User)<br />Genre: @Html.DisplayFor(modelItem => item.Genre)</div>

                </div>
            </div>
        </div>
    }
</div>


